{% import "_includes/forms" as forms %}

{% set prohectConfig = craft.app.getProjectConfig() %}
{% set emailSettings = prohectConfig.get('email') %}

{{ forms.textField({
    label: 'From Email',
    instructions: 'Enter the Email that will send the Notification Emails.',
    id: 'fromEmail',
    name: 'fromEmail',
    value: settings['fromEmail'] ? settings['fromEmail'] : emailSettings.fromEmail
    })
}}

{{ forms.textField({
    label: 'From Name',
    instructions: 'Enter the Name that will send the Notification Emails.',
    id: 'fromName',
    name: 'fromName',
    value: settings['fromName'] ? settings['fromName'] : emailSettings.fromEmail})
}}

{{ forms.textField({
    label: 'Email',
    instructions: 'Enter the Email that will receive Notification Email. Separate with comma for more than one email addresses. (If empty emails will be sent to System Email Address)',
    id: 'emailTo',
    name: 'emailTo',
    value: settings['emailTo']})
}}

{{ forms.textField({
    label: 'Email Subject',
    instructions: 'Enter the Subject Line for Notification Email',
    id: 'emailSubject',
    name: 'emailSubject',
    value: settings['emailSubject']})
}}

{{ forms.textField({
    label: 'Set the template for the email',
    instructions: 'The template will receive a `entry` variable',
    id: 'confirmationTemplate',
    name: 'confirmationTemplate',
    value: settings['confirmationTemplate']})
}}
